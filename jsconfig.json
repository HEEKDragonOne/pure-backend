{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "Node",
    "target": "ESNEXT",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.js", ],
  "exclude": ["node_modules", "dist"]
}
